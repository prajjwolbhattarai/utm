  <button onclick="generateUTM()">Generate UTM URL</button>


  <div class="output" id="output"></div>


  <script>

    function encode(val) {

      return encodeURIComponent(val.toLowerCase().replace(/[äöüß]/g, c => (

        { 'ä': 'ae', 'ö': 'oe', 'ü': 'ue', 'ß': 'ss' }[c] || c

      )).replace(/\s+/g, '_'));

    }


    function generateUTM() {

      const base = document.getElementById('baseUrl').value.trim();

      if (!base) return alert("Base URL is required");


      const params = [

        ['utm_source', encode(document.getElementById('utmSource').value)],

        ['utm_medium', encode(document.getElementById('utmMedium').value)],

        ['utm_campaign', encode(document.getElementById('utmCampaign').value)],

      ];


      const optional = [

        ['utm_content', 'utmContent'],

        ['utm_term', 'utmTerm'],

        ['utm_id', 'utmId'],

        ['utm_lang', 'utmLang'],

        ['utm_audience', 'utmAudience']

      ];


      optional.forEach(([param, id]) => {

        const val = document.getElementById(id).value.trim();

        if (val) params.push([param, encode(val)]);

      });


      const queryString = params.map(([k, v]) => `${k}=${v}`).join('&');

      const fullUrl = `${base}?${queryString}`;

      document.getElementById('output').innerText = fullUrl;

    }

  </script>

